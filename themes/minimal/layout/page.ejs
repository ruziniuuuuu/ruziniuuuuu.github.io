<article class="page">
  <header class="page__header">
    <a class="page__back" href="<%- url_for('/') %>">
      <svg viewBox="0 0 24 24" role="img" focusable="false" aria-hidden="true">
        <path fill="currentColor" d="M14.7 6.3a1 1 0 0 1 0 1.4L10.41 12l4.3 4.3a1 1 0 0 1-1.42 1.4l-5-5a1 1 0 0 1 0-1.4l5-5a1 1 0 0 1 1.42 0Z"/>
      </svg>
      <span>Home</span>
    </a>
    <h1 class="page__title"><%= page.title %></h1>
    <% if (page.subtitle) { %>
      <p class="page__subtitle"><%= page.subtitle %></p>
    <% } %>
  </header>
  <section class="page__content markdown-body">
    <%- page.content %>
  </section>
</article>
